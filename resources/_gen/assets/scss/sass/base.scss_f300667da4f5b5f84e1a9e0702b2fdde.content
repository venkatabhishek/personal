@import url("https://fonts.googleapis.com/css?family=Montserrat&display=swap");
html, body {
  margin: 0;
  background: #1f1f1f;
  color: #fff;
  font-family: "Montserrat", sans-serif; }

nav {
  display: flex;
  justify-content: space-between;
  font-size: 20px;
  padding-top: 100px; }

.logo {
  text-transform: uppercase;
  font-weight: 600;
  letter-spacing: .75px; }

.links {
  display: flex; }

.link {
  margin: 0 15px;
  letter-spacing: 1.78px; }

.link:after {
  content: '';
  width: 0;
  height: 3px;
  display: block;
  margin-top: 5px;
  transition: all .2s ease;
  background: #fff;
  -webkit-transition: all .2s ease; }

.link:hover:after {
  width: 100%;
  left: 0;
  background: #fff; }

.highlight {
  color: #ED4337; }

.container {
  padding-left: 160px;
  padding-right: 160px; }

a {
  text-decoration: none;
  color: #fff; }

@media only screen and (max-width: 650px) {
  .links {
    display: none; }
  .container {
    padding-left: 80px;
    padding-right: 80px; } }

@import "https://fonts.googleapis.com/css?family=Montserrat&display=swap";html,body{margin:0;background:#1f1f1f;color:#fff;font-family:montserrat,sans-serif}nav{display:flex;justify-content:space-between;font-size:20px;padding-top:100px}.logo{text-transform:uppercase;font-weight:600;letter-spacing:.75px}.links{display:flex}.link{margin:0 15px;letter-spacing:1.78px}.link:after{content:"";width:0;height:3px;display:block;margin-top:5px;transition:all .2s ease;background:#fff;-webkit-transition:all .2s ease}.link:hover:after{width:100%;left:0;background:#fff}.mobile{display:none;position:relative;z-index:3}.overlay{display:none;position:absolute;width:100%;height:100%;top:0;z-index:2;justify-content:center;align-items:center;background-color:#fff;transition:all .3s ease}.overlay .link{color:#1f1f1f;margin-top:10px;margin-bottom:10px}.menu-icon{height:30px;width:30px;position:relative;z-index:2;cursor:pointer}.menu-icon__line{height:2px;width:30px;display:block;background-color:#fff;margin-bottom:4px;transition:transform .2s ease,background-color .5s ease}.menu-icon__line-left{width:15px}.menu-icon__line-right{width:15px;float:right}.active .menu-icon__line{transform:translateX(0px)rotate(-45deg);background-color:#000}.active .menu-icon__line-left{transform:translateX(1px)rotate(45deg)}.active .menu-icon__line-right{transform:translateX(-2px)rotate(45deg)}.active.overlay{display:flex}.highlight{color:#ed4337}.container{padding-left:160px;padding-right:160px}a{text-decoration:none;color:#fff}svg{color:#1f1f1f}.top{margin-top:100px;margin-bottom:50px}@media only screen and (max-width:650px){.links{display:none}.container{padding-left:80px;padding-right:80px}.mobile{display:block}}@media only screen and (max-width:400px){.logo{display:none}.mobile{margin-bottom:10px}.top{margin-top:0}}::-webkit-scrollbar{width:10px;height:12px}::-webkit-scrollbar-track{background:#1f1f1f}::-webkit-scrollbar-thumb{background:#fff}